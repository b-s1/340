<h3> Associate houses(s) with a character </h3>
    <form id="characters_with_houses" action="/house_members" method="post">
    Person: <select name='char_id'>
        {{#each characters}}
          <option value='{{char_id}}'>{{first_name}} {{last_name}}</option>
        {{/each}}
    </select>
    <br>
    Houses: <select multiple name="huts"> 
        {{!-- We display title but the value that is submitted through the form is actually the certificate's id --}}
        {{#each manyhouses}}
        <option value="{{house_id}}">{{house_name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
    </form>

</div>
<br/>
<h3> List of characters with their house </h3>
<table>
    <thead> 
        <th>character</th> 
        <th>house</th> 
    </thead> 
    <tbody> 
        {{#each characters_with_houses}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{house_name}}</td> 
            <td><button onclick="deleteCharacterHouse({{char_id}},{{house_id}})">Delete</button></td>
        </tr>
        {{else}}
        <b> No people with any house found! Grant some using the form. </b>
        {{/each}} 

    </tbody>
</table> 
</html>
